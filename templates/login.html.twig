{% extends "base.html.twig" %}
{% block title %}Login - Inventarisierung{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container">
        <h1 class="text-center">Inventarisierung</h1>
        <h2 class="text-center">Login</h1>
        <div class="container text-center">
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="username">Benutzer</label>
                    <input class="form-control" type="text" name="_username" >
                </div>
                <div class="form-group">
                    <label for="password">Passwort</label>
                    <input class="form-control" type="password" name="_password" >
                </div>
                <input type="hidden" name="_target_path" value="/inventar" />
                <input type="submit"  class="btn btn-primary" value="Submit">
            </form> 
        </div>
    </div>
{% endblock %}

{% block menu %}{% endblock %}
